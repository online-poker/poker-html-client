{
    "extends": "tslint:recommended",
    "rules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "object-literal-sort-keys": false,
        "interface-name": [false],
        "eofline": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-empty": true,
        "no-console": [false],
        "no-reference": false,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        /* This to be removed after code cleanup */
        "no-unused-variable": false,
        "only-arrow-functions": [false],
        "prefer-for-of": false,
        "space-before-function-paren": false,
        "array-type": [false],
        "max-classes-per-file": [false],
        "max-line-length": [
            140
        ],
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}