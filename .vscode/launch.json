    "version": "0.2.0",
    "configurations": [        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "-i"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,            
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current file",
            "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
            "args": [
                "-i",
                "${file}"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,            
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}